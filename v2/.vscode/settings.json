{
  "editor.detectIndentation": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*.uid": true,
    "**/*.import": true,
    "**/*.godot/*": true,
    "**/*.stub": true
  },
  "[gdscript]": {
    "editor.defaultFormatter": "geequlim.godot-tools"
  },
  "godotFormatter.useSpaces": false,
  "editor.formatOnSave": true,
  "godotTools.editorPath.godot4": "/usr/bin/godot",
  "todoSidebar.activeFile": "./planning_docs/TODO.md"
}